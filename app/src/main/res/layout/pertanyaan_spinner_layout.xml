<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:id="@+id/parentSpPanenTBS"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:text="Loading.."
        android:fontFamily="@font/inter_medium"
        android:id="@+id/tvTitleForm"
        android:textSize="17dp"
        android:gravity="center|left"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:id="@+id/MCVSpinner"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            >

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spHomeMarkerTPH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ms_text_color="@color/black"
                android:visibility="visible"
                app:ms_hint="Pilih Kategori Yang Sesuai" />



            <com.jaredrummler.materialspinner.MaterialSpinner

                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/spPanenTBS1"
                app:ms_text_color="@color/black"
                />

            <EditText
                android:id="@+id/etHomeMarkerTPH"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1"
                android:textColor="@color/black"
                android:inputType="text"
                android:padding="16dp"
                android:textSize="15dp" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jawaban harus diisi!"
            android:textColor="@color/colorRedDark"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:paddingStart="12dp"
            android:paddingBottom="4dp"
            android:textSize="13dp" />
    </LinearLayout>


</LinearLayout>